<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/offwhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@color/maroon">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/maroon"
                            android:src="@drawable/pushup_yellow"
                            app:srcCompat="@drawable/pushup_yellow"
                            android:adjustViewBounds="true"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textSize="8pt"
                        android:background="@color/offwhite"
                        android:gravity="start"
                        android:text="You should do push ups at least 40 times!"/>

                    <Button
                        android:id="@+id/pushupButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:padding="10dp"
                        android:textSize="6pt"
                        android:gravity="center"
                        android:text="Let's do some push-ups!"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/offwhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@color/maroon">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:background="@color/maroon"
                            android:src="@drawable/situp_yellow"
                            app:srcCompat="@drawable/situp_yellow"
                            android:adjustViewBounds="true"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textSize="8pt"
                        android:background="@color/offwhite"
                        android:gravity="start"
                        android:text="You should do sit ups at least 40 times today!"/>

                    <Button
                        android:id="@+id/situpButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:padding="10dp"
                        android:textSize="6pt"
                        android:gravity="center"
                        android:text="Let's do some sit-ups today!"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/offwhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@color/maroon">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:background="@color/maroon"
                            android:src="@drawable/jogging_yellow"
                            app:srcCompat="@drawable/jogging_yellow"
                            android:adjustViewBounds="true"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textSize="8pt"
                        android:background="@color/offwhite"
                        android:gravity="start"
                        android:text="You should run at least 2 km today!"/>

                    <Button
                        android:id="@+id/joggingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:padding="10dp"
                        android:textSize="6pt"
                        android:gravity="center"
                        android:text="Let's do some running!"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>