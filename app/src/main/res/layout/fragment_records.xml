                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/offwhite"
                                android:gravity="start"
                                android:text=" push ups"
                                android:textSize="8pt" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
