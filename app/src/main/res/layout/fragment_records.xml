<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/simulationLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".Records">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/simulationImage"
        android:src="@drawable/please"
        app:srcCompat="@drawable/please" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simulationText"
        android:textAlignment="center"
        android:background="@color/colorBackground"
        android:textColor="@color/maroon"
        android:gravity="start"
        android:padding="10dp"
        android:text="Please Open Our Other App 'WorkIt Simulator' To See Workout Simulations"
        android:textSize="9pt" />

</LinearLayout>